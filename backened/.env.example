# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# For production, use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGODB_URI=mongodb://localhost:27017/adminUserSystem

# JWT Configuration
# Generate new secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=YOUR_SUPER_SECRET_KEY_HERE_CHANGE_THIS_IN_PRODUCTION
JWT_EXPIRY=900

# Session Configuration
SESSION_TIMEOUT=900000

# Rate Limiting
LOGIN_RATE_LIMIT_WINDOW=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5
API_RATE_LIMIT_WINDOW=90000
API_RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=.xlsx,.xls

# Frontend URL (Change for production)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=debug

# Token Refresh Settings
TOKEN_REFRESH_ENABLED=true
TOKEN_REFRESH_INTERVAL=600000

# Production Security Notes:
# 1. Never commit .env file to Git
# 2. Use strong JWT_SECRET (minimum 64 characters)
# 3. Update MONGODB_URI to Atlas connection string
# 4. Update FRONTEND_URL to your deployed frontend URL
# 5. Set NODE_ENV=production for production deployment